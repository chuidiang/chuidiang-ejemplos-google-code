"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.chuidiang.ejemplos.hibernate.ejemplo1.Event">
		<id name="id" column="EVENT_ID">
			<generator class="native"></generator>
